<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/splashFragment">

    <fragment
        android:id="@+id/homeFragment"
        android:name="io.alup.insurance.view.HomeFragment"
        android:label="Alup Insurance" />
    <fragment
        android:id="@+id/splashFragment"
        android:name="io.alup.insurance.view.SplashFragment"
        android:label="SplashFragment" >
        <action
            android:id="@+id/action_splashFragment_to_homeFragment"
            app:destination="@id/homeFragment" />
        <action
            android:id="@+id/action_splashFragment_to_signInOtpFragment"
            app:destination="@id/signInOtpFragment" />
        <action
            android:id="@+id/action_splashFragment_to_signUpFragment"
            app:destination="@id/signUpFragment" />
    </fragment>
    <fragment
        android:id="@+id/signInPhoneFragment"
        android:name="io.alup.insurance.view.SignInPhoneFragment"
        android:label="fragment_sign_in_otp"
        tools:layout="@layout/fragment_sign_in_otp" >
        <action
            android:id="@+id/action_signInPhoneFragment_to_homeFragment"
            app:destination="@id/homeFragment" />
    </fragment>
    <fragment
        android:id="@+id/signInOtpFragment"
        android:name="io.alup.insurance.view.SignInOtpFragment"
        android:label="fragment_sign_in_phone" >
        <action
            android:id="@+id/action_signInOtpFragment_to_signInPhoneFragment"
            app:destination="@id/signInPhoneFragment" />
    </fragment>
    <fragment
        android:id="@+id/signUpFragment"
        android:name="io.alup.insurance.view.SignUpFragment"
        android:label="SignUpFragment" >
        <action
            android:id="@+id/action_signUpFragment_to_signInPhoneFragment"
            app:destination="@id/signInPhoneFragment" />
    </fragment>
    <fragment
        android:id="@+id/myProfileFragment2"
        android:name="io.alup.insurance.view.MyProfileFragment"
        android:label="My Profile" />
    <fragment
        android:id="@+id/notificationsFragment2"
        android:name="io.alup.insurance.view.NotificationsFragment"
        android:label="Notifications" />
    <fragment
        android:id="@+id/myPayoutsFragment"
        android:name="io.alup.insurance.view.MyPayoutsFragment"
        android:label="My Payouts" />
    <fragment
        android:id="@+id/myPoliciesFragment"
        android:name="io.alup.insurance.view.MyPoliciesFragment"
        android:label="My Policies" />
    <fragment
        android:id="@+id/farmsFragment"
        android:name="io.alup.insurance.view.FarmsFragment"
        android:label="My Farms" />
    <fragment
        android:id="@+id/newFarmFragment"
        android:name="io.alup.insurance.view.NewFarmFragment"
        android:label="New Farm" />
    <fragment
        android:id="@+id/newPolicyFragment"
        android:name="io.alup.insurance.view.NewPolicyFragment"
        android:label="New Insurance Policy" />
</navigation>