<resources>

    <style name="Button" parent="Widget.Material3.Button">
        <item name="android:textAppearance">@style/Text.Medium</item>
        <item name="fontFamily">@font/medium</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="Button.Primary">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:background">@drawable/bg_primary</item>
    </style>

    <style name="Button.Secondary">
        <item name="android:background">@drawable/bg_secondary</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="Button.Background">
        <item name="android:background">@drawable/bg_background</item>
        <item name="android:backgroundTint">@color/color_background</item>
        <item name="android:textColor">@color/color_on_background</item>
    </style>

    <style name="Button.Background.Alt">
        <item name="android:background">@drawable/bg_background_alt</item>
        <item name="android:backgroundTint">@color/color_alt_background</item>
        <item name="android:textColor">@color/color_on_background</item>
    </style>
</resources>